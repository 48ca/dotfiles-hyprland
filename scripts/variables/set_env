#!/bin/bash

function setPrimaryMonitor(){
    save_location=~/.config/hypr/scripts/variables/temp/primary_screen
    
    # make file if it doesnt exist
    if ![ -f "$save_location" ]; then
    touch $save_location
    fi

    echo $1 > $save_location
}

function setBackgroundImage(){
    save_location=~/.config/hypr/scripts/variables/temp/background
    
    if ![ -f "$save_location" ]; then
    touch $save_location
    fi
    
    echo $1 > $save_location
}


doc() {
    echo "Usage:
    set_env [Options]

    Options:
        primary     Sets the primary screen
        background  Sets the image location of the active wallpaper"
}

case $1 in
    primary)		setPrimaryMonitor $2		;;
    background)		setBackgroundImage $2       ;;
    help)           doc                         ;;
    *)              doc                         ;;            
esac
